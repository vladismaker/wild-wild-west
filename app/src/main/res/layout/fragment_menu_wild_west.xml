<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuWildWestFragment"
    android:background="@drawable/background_menu_wild_west"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="30dp">
    <ImageView
        android:id="@+id/btn_game_wild_west"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/btn_play_wild_west"
        android:importantForAccessibility="no"/>
    <ImageView
        android:id="@+id/btn_volume_wild_west"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/btn_volume_wild_west"
        android:layout_marginTop="25dp"
        android:importantForAccessibility="no"/>
    <ImageView
        android:id="@+id/btn_about_game_wild_west"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/btn_about_game_wild_west"
        android:layout_marginTop="25dp"
        android:importantForAccessibility="no"/>
    <ImageView
        android:id="@+id/btn_exit_wild_west"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/btn_exit_wild_west"
        android:layout_marginTop="25dp"
        android:importantForAccessibility="no"/>
</LinearLayout>